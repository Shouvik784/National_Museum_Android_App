            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Style: Jaipur, Rajasthan, Date: circa 1750 C.E. Opaque watercolor on paper, Size :67 x 46 c.m. Accession no: 56.59/57"
