<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/appicon"
            android:layout_marginBottom="2dp"
            android:contentDescription="App Logo" />

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Museum"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/lite_white"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover Blogs of National Museum"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- About Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The National Museum Virtual Tour app offers an immersive experience into the cultural, artistic, and historical legacy of our nation. Explore exhibits, artifacts, and curated collections from the comfort of your device."
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#444444"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Evolution of Modern Art: A Journey Through Time"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore the fascinating transformation of artistic expression from the late 19th century to the present day. From Impressionism to Digital Art, discover how social changes and technological advancements have shaped the art world we know today.\n                                                          January 27, 2025"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ancient Civilizations: Treasures of the Past"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Journey through time as we explore remarkable artifacts from ancient civilizations. From Egyptian hieroglyphs to Greek sculptures, each piece tells a unique story of human innovation and creativity.\n                                                          January 27, 2025"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digital Museums: The Future of Cultural Experience"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover how technology is revolutionizing the museum experience. From virtual reality exhibitions to interactive digital installations, explore how museums are adapting to the digital age while preserving our cultural heritage.\n                                                          January 27, 2025"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modern And Clean Design"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Responsive layout using CSS Grid\n
2. Clean typography using Google Fonts (Playfair Display for headings, Source Sans Pro for body text)\n
3. Subtle animations and hover effects\n
4. Soft shadows and rounded corners for visual depth\n

                                                        January 27, 2025"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="#444444"
            android:layout_marginBottom="20dp" />

        <!-- 7. Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: nationalmuseum@gmail.com\nÂ© 2025 National Museum"
            android:textSize="12sp"
            android:textColor="@color/lite_white"
            android:paddingTop="24dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
